        <ul>
            <% announcements.forEach(function(announcement) { %>
                <li>
                    <strong><%= announcement.title %></strong>: <%= announcement.content %>
                    <p><em>發佈時間: <%= announcement.created_at %></em></p>
                </li>
            <% }); %>
        </ul>
    </main>

